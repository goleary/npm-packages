{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noEmit": true,
        "lib": ["esnext", "dom"],
        "jsx": "react",
        "moduleResolution": "node",
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": ["src", "__tests__"],
    "exclude": ["dist"]
}
